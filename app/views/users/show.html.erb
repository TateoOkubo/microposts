<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <!-- ユーザのプロフィール表示 -->
      <%= render 'user_profile' , user: @user %>
      
      <!-- フォローしている/されているユーザリストへのリンク　-->
      <%= link_to "フォロー",  followings_user_path(@user.id) %>
      /
      <%= link_to "フォロワー",  followers_user_path(@user.id) %>

    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Micropost (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <!-- 
        render partial: 'microposts/micropost', collection: @microposts
        と同じ
          -->
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
</div>
